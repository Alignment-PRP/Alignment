# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# API CALLS

GET     /login                      controllers.ApplicationController.login()
POST    /api/login                      controllers.LoginController.authenticate()
GET     /api/logout                     controllers.LoginController.logout()
GET     /api/usernameAndClass           controllers.UserController.getUser()

GET     /api/sign-up                    controllers.SignupController.signUp()
POST    /api/sign-up                    controllers.SignupController.create()

GET     /api/projects                   controllers.ProjectController.getUserRelatedProjects()
GET     /api/public/projects            controllers.ProjectController.getPublicProjects()

GET     /api/newproject                 controllers.ProjectController.getNewProjectView()
POST    /api/projects                   controllers.ProjectController.newProject()
GET     /api/project/id/:id             controllers.ProjectController.getProjectByProjectID(id: String)

GET     /api/requirements/category/:id  controllers.RequirementController.getRequirementsByCategoryID(id: String)
GET     /api/requirements/all           controllers.RequirementController.getAllRequirements()

GET     /api/projectrequirementsForm    controllers.ProjectController.getProjectRequirementForm()
GET     /api/all-projectrequirements    controllers.ProjectController.getProjectRequirements(id)

GET     /api/project/newrequiremnt      controllers.RequirementController.getNewRequirementView()
POST    /api/project/requirement        controllers.RequirementController.newProjectRequirement()

GET     /api/project/addReq             controllers.ProjectController.addReqForm()
POST    /api/project/addReq             controllers.ProjectController.addReq()

GET     /api/category/names             controllers.RequirementController.getCategories()
GET     /api/category/byname/:name      controllers.RequirementController.getRequirementsByCategoryName(name: String)

GET     /api/add-requirement            controllers.AdminController.addRequirement()
POST    /api/add-requirement            controllers.AdminController.addReq()

GET     /api/get-requirement            controllers.AdminController.getReq()

GET     /api/update-requirement         controllers.AdminController.updateReq()
POST    /api/update-requirement         controllers.AdminController.updateRequirement()

GET     /api/add-category               controllers.AdminController.addCategory()
POST    /api/add-category               controllers.AdminController.createCategory()

POST    /api/add-subcategory            controllers.AdminController.addSubcategory()

GET     /api/add-requirementcategeory   controllers.AdminController.addCategeroyToRequirement()
POST    /api/add-requirementcategeory   controllers.AdminController.insertRequirementCategory()

#GET     /delete-project             controllers.AdminController.deleteProjects()
#POST    /delete-project             controllers.AdminController.deleteProject()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)

# ROUTES FOR REACT
GET     /                               controllers.ApplicationController.init()
GET     /*url                           controllers.ApplicationController.initUrl(url)
# DO NOT ADD ROUTES BELOW THIS^