# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.ApplicationController.init()

GET     /login                      controllers.ApplicationController.login()

POST    /login                      controllers.LoginController.authenticate()
GET     /logout                     controllers.LoginController.logout()

GET     /sign-up                    controllers.SignupController.signUp()
POST    /sign-up                    controllers.SignupController.create()



# Preliminary site-navigation
GET     /main                       controllers.ApplicationController.dashboard()

GET     /projects                   controllers.ProjectController.getUserRelatedProjects()
GET     /public/projects            controllers.ProjectController.getPublicProjects()



# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)

# EXAMPLE
GET     /api/user/:name             controllers.DatabaseController.userByName(name: String)
