# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.ApplicationController.init()

GET     /login                      controllers.ApplicationController.login()
POST    /login                      controllers.LoginController.authenticate()
GET     /logout                     controllers.LoginController.logout()

GET     /sign-up                    controllers.SignupController.signUp()
POST    /sign-up                    controllers.SignupController.create()



# Preliminary site-navigation
GET     /projects                   controllers.ProjectController.getUserRelatedProjects()
GET     /public/projects            controllers.ProjectController.getPublicProjects()

GET     /newproject                 controllers.ProjectController.getNewProjectView()
POST    /projects                   controllers.ProjectController.newProject()

GET     /requirements/category/:id  controllers.RequirementController.getRequirementsByCategoryID(id: String)
GET     /requirements/all           controllers.RequirementController.getAllRequirements()

GET     /project/newrequiremnt      controllers.RequirementController.getNewRequirementView()
POST    /project/requirement        controllers.RequirementController.newProjectRequirement()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)

# EXAMPLE
GET     /api/user/:name             controllers.DatabaseController.userByName(name: String)
