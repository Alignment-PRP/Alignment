# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.ApplicationController.init()
GET     /login                      controllers.LoginController.login()

POST    /login                      controllers.LoginController.authenticate()

=======

# Preliminary site-navigation
GET     /main                       controllers.ApplicationController.dashboard()


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)

# EXAMPLE
GET     /api/user/:name             controllers.DatabaseController.userByName(name: String)